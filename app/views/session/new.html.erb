<div class="login-div">
<h1 class='login-header'> Login </h1>

<% if flash[:error_message] %>
  <h2><%= flash[:error_message] %></h2>
<% end %>

<%= form_tag login_path  do %>
  <%= label_tag :email %>
  <%= email_field_tag :email%>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Login", :class => 'login-button' %>

<% end %>
